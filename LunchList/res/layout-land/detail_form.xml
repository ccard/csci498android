<?xml version="1.0" encoding="utf-8"?>
<!--  Chris Card | 9/21/2012 | landscape layout for detail form -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="2"
        android:stretchColumns="2" >

        <TableRow>

            <TextView android:text="@string/nametitle" />

            <EditText
                android:id="@+id/name"
                android:layout_span="2" />
        </TableRow>

        <TableRow>

            <TextView android:text="@string/addresstitle" />

            <EditText
                android:id="@+id/addr"
                android:layout_span="2" />
        </TableRow>

        <TableRow>

            <TextView android:text="@string/typetitle" />

            <RadioGroup android:id="@+id/types" >

                <RadioButton
                    android:id="@+id/take_out"
                    android:checked="true"
                    android:text="@string/take_outtitle" />

                <RadioButton
                    android:id="@+id/sit_down"
                    android:text="@string/sit_downtitle" />

                <RadioButton
                    android:id="@+id/delivery"
                    android:text="@string/deliverytitle" />
            </RadioGroup>

            <LinearLayout android:orientation="vertical" >

                <EditText
                    android:id="@+id/notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:hint="Notes"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:maxLines="2"
                    android:scrollHorizontally="false" />

                <EditText
                    android:id="@+id/feed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/feedtitle" />

                <Button
                    android:id="@+id/save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/savetitle" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

</ScrollView>